{
  "name": "science-articles-app",
  "version": "1.0.0",
  "description": "An app for displaying and exploring science articles",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run generate:sitemap",
    "preview": "vite preview",
    "generate:sitemap": "node scripts/generate-sitemap.js",
    "test:sitemap": "node -e \"require('./pages/api/sitemap.js').default({}, { status: (code) => ({ json: (data) => console.log('Status:', code, 'Data:', data) })})\"",
    "start": "npm run dev"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.53.0",
    "dotenv": "^17.2.1",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.8.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2",
    "vite": "^4.4.5"
  }
}
